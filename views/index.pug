extends layout

block content
  h1 Enter Your Words
  form(method="POST" action="/story" id="words")
    label(for="noun1") Noun:
    input(type="text" name="noun1" value="man" id="noun1")
    br
    label(for="noun2") Noun 2:
    input(type="text" name="noun2" value="bird" id="noun2")
    br
    label(for="verb1") Verb:
    input(type="text" name="verb1" value="run" id="verb1")
    br
    label(for="verb2") Verb 2:
    input(type="text" name="verb2" value="cry" id="verb2")
    br
    label(for="adjective1") Adjective:
    input(type="text" name="adjective1" value="crinkled" id="adjective1")
    br
    label(for="adjective2") Adjective 2:
    input(type="text" name="adjective2" value="slim" id="adjective2")
    br
    label(for="adjective3") Adjective 3:
    input(type="text" name="adjective3" value="dark" id="adjective3")
    br

    label(for="storyChoice") Choose One
    select(form="words" name="storyChoice" id="storyChoice")
     option(value = "1") Story 1
     option(value = "2") Story 2
     option(value = "3") Story 3
     option(value = "Random") Random Story
    br
    button(type="submit" form="words") Tell Me a Story

